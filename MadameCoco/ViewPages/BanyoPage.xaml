<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadameCoco.ViewPages.BanyoPage"
             Shell.NavBarIsVisible="False"
             >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Frame BackgroundColor="White" >
                <StackLayout Orientation="Horizontal" HeightRequest="40">
                    <ImageButton x:Name="Back4" Source="back.png" HorizontalOptions="StartAndExpand" WidthRequest="20" HeightRequest="20" Clicked="Back4_Clicked"></ImageButton>
                    <Label Text="BANYO" FontSize="20" TextColor="Black" FontAttributes="Bold" ></Label>
                    <ImageButton Source="basket.png" WidthRequest="40" HeightRequest="50" HorizontalOptions="EndAndExpand" Clicked="ImageButton_Clicked"></ImageButton>
                </StackLayout>
            </Frame>
            <Label Text="75 TL Üzeri Kargo Bedava" BackgroundColor="Gray" TextColor="Black" FontSize="18" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
            <StackLayout Orientation="Horizontal">
                <SearchBar Placeholder="Arama" HorizontalOptions="Start" WidthRequest="300" HeightRequest="20"></SearchBar>
                <ImageButton Source="barcode.png" HorizontalOptions="EndAndExpand" WidthRequest="50" HeightRequest="50" ></ImageButton>
            </StackLayout>
            <ScrollView>
                <ListView x:Name="lst2" HasUnevenRows="True" ItemsSource="{Binding BanyoUrun}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="40">
                            <Frame>
                                <StackLayout Orientation="Vertical">
                                    <Image Source="{Binding Resim}"></Image>
                                    <Label Text="{Binding Urun}" TextColor="Black" FontSize="20" HorizontalTextAlignment="Center"></Label>
                                    <Label Text="{Binding Fıyat}" TextColor="Black" FontSize="45" HorizontalTextAlignment="Center"></Label>
                                </StackLayout>
                            </Frame>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>