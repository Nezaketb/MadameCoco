            <Label Text="Ad*" TextColor="Black"></Label>
            <Entry Keyboard="Text"></Entry>
            <Label Text="Soyad*" TextColor="Black"></Label>
            <Entry Keyboard="Text"></Entry>
            <Label Text="Cep Telefonu*" TextColor="Black"></Label>
