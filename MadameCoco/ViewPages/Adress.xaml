            <Label Text="İl*" TextColor="Black"></Label>
            <Entry Keyboard="Text"></Entry>
            <Label Text="İlçe*" TextColor="Black"></Label>
            <Entry Keyboard="Text"></Entry>
            <Label Text="Adres*" TextColor="Black"></Label>
