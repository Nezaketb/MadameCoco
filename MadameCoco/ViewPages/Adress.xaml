            <Button Text="KAYDET VE DEVAM ET" BackgroundColor="DarkRed" TextColor="White" HorizontalOptions="Center" Clicked="Button_Clicked_1"></Button>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>